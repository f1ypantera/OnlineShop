@model IEnumerable<OnlineShop.Models.CarModel>

@{
    ViewBag.Title = "Админ панель: список товаров";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>List of cars</h3>
    </div>
    <div>
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
 
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr class="text-center text-danger">
                <th>ID</th>
                <th>Модель</th>
                <th>Производитель</th>
                <th>Категория</th>
                <th>Описание</th>
                <th>Цена</th>
                <th>Действия</th>
            </tr>
            @foreach (var item in Model)
            {
            <tr class="text-center">
                <td>@item.CarModelId</td>
                <td>@Html.ActionLink(item.NameModel, "Edit", new { id = item.CarModelId })</td>
                <td>@item.NameManufacturer</td>
                <td>@item.NameCategory</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString()</td>
                <td>@Html.ActionLink("Details", "Details", new { id = item.CarModelId })   @Html.ActionLink("Delete", "Delete", new { id = item.CarModelId })</td>


            </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add Car", "Create", null,
            new { @class = "btn btn-danger" })
    </div>
</div>
