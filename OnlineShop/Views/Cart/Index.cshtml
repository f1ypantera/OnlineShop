@model OnlineShop.ViewModels.CartIndexViewModel

@{
    ViewBag.Title = "CarModel - корзина";
}

<h2>Ваша корзина</h2>
<table class="table">
    <thead>
        <tr>
            <th>Кол-во</th>
            <th>Игра</th>
            <th class="text-right">Цена</th>
            <th class="text-right">Общая цена</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
            <tr>
                <td class="text-center">@line.quantity</td>
                <td class="text-left">@line.CarModel.NameModel</td>
                <td class="text-right">@line.CarModel.Price.ToString("$")</td>
                <td class="text-right">
                    @((line.quantity * line.CarModel.Price).ToString("$"))
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Итого:</td>
            <td class="text-right">
                @Model.Cart.ComputeTotalValue().ToString("$")
            </td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Продолжить покупки</a>
</div>

